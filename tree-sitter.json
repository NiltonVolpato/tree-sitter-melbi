{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "melbi",
      "camelcase": "Melbi",
      "title": "Melbi Language Parser",
      "scope": "source.melbi",
      "file-types": [
        "rz",
        "melbi",
        "rhz"
      ],
      "injection-regex": "^melbi$",
      "class-name": "TreeSitterMelbi"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Melbi grammar for tree-sitter",
    "authors": [
      {
        "name": "Nilton Volpato",
        "email": "nilton@volpa.to",
        "url": "https://melbi.dev/"
      }
    ],
    "links": {
      "repository": "https://github.com/melbi-lang/melbi"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
